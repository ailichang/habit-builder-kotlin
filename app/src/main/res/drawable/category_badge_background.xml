<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background-->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/markerLightGrey"/>
        </shape>
    </item>
    <!-- over top shadow -->
    <item>
        <shape android:shape="oval" >
            <gradient
                android:type="linear"
                android:angle="90"
                android:endColor="@color/colorOnTertiary"
                android:startColor="@color/colorTertiary"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/markerGrey"/>
        </shape>
    </item>
</layer-list>